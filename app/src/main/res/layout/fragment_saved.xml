<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 🏷️ Title -->
    <TextView
        android:id="@+id/saved_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Jobs"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <!-- 📋 List of Saved Jobs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_jobs_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/saved_title"
        android:visibility="visible" />

    <!-- 🚫 Empty State Layout -->
    <LinearLayout
        android:id="@+id/empty_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/saved_title"
        android:visibility="gone">

        <ImageView
            android:id="@+id/empty_saved_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_bookmark_border"
            android:tint="#888888" />

        <TextView
            android:id="@+id/empty_saved_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No saved jobs yet."
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</RelativeLayout>
