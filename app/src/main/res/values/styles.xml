<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Your app theme might be here -->

    <!-- ðŸ§¾ Reusable Info Card style -->
    <style name="InfoCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/info_card_bg</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center</item>
    </style>


        <style name="EditBox">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">12dp</item>
            <item name="android:padding">12dp</item>
            <item name="android:background">@drawable/edittext_bg</item> <!-- Optional -->
            <item name="android:textColor">#000000</item>
            <item name="android:textSize">14sp</item>
        </style>

    <!-- Add this inside your <resources> -->
    <style name="ProfileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>




</resources>
